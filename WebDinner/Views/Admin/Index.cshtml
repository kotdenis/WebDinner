@model List<AllMeals>
@{
    ViewBag.Title = "Наши блюда";
    Layout = "_AdminLayout";
}

<div class="m-1 p-1">

    <table class="table table-striped table-bordered table-sm">
        <tr>
            <th class="text-right">ID</th>
            <th>Наименование</th>
            <th class="text-right">Цена</th>
            <th class="text-center">Действия</th>
        </tr>
        @foreach (var t in Model)
        {
            <tr>
                <td class="text-right">@t.Id</td>
                <td>@t.Name</td>
                <td class="text-right">@string.Format("{0:c}", t.Price)</td>
                <td class="text-center">
                    <form asp-action="Delete" method="post">
                        <a asp-action="Edit" class="btn btn-sm btn-warning"
                           asp-route-name="@t.Name" asp-route-id="@t.Id" asp-route-mealtype="@t.MealType">
                            Изменить
                        </a>
                        <input type="hidden" name="Id" value="@t.Id" />
                        <input type="hidden" name="type" value="@t.Name" />
                        <input type="hidden" name="mealtype" value="@t.MealType" />
                        <button type="submit" class="btn btn-danger btn-sm">
                            Удалить
                        </button>
                    </form>
                </td>
            </tr>
        }
    </table>
    <div class="text-center">
        <a asp-action="Create" class="btn btn-primary">Добавить блюдо</a>
    </div>
</div>