@model AllMeals
@{
    ViewBag.Title = "Редактирование";
    Layout = "_AdminLayout";
}

<div class="container">
    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="Name">Наименование</label>
            <input asp-for="Name" class="form-control" readonly="readonly" />
        </div>
        <div class="form-group">
            <label asp-for="Description">Описание</label>
            <div><span asp-validation-for="Description" class="text-danger"></span></div>
            <textarea asp-for="Description" class="form-control"></textarea>
        </div>

        <div class="form-group">
            <label asp-for="Price">Цена</label>
            <div><span asp-validation-for="Price" class="text-danger"></span></div>
            <input asp-for="Price" class="form-control" />
        </div>
        <div class="text-center">
            <button class="btn btn-primary" type="submit">Сохранить</button>
            <a asp-action="Index" class="btn btn-secondary">Отмена</a>
        </div>
    </form>
</div>
