@using Microsoft.AspNetCore.Identity
@model RoleEditModel
@{
    Layout = "_AdminLayout";
}

<div class="bg-primary m-1 p-1 text-white"><h4>Роли</h4></div>
<div asp-validation-summary="All" class="text-danger"></div>

<div class="m-1 p-1">
    <form asp-action="Edit" method="post">
        <input type="hidden" name="roleName" value="@Model.Role.Name" />
        <input type="hidden" name="roleId" value="@Model.Role.Id" />
        <h6 class="bg-info p-1 text-white">Добавить к @Model.Role.Name</h6>
        <table class="table table-bordered table-sm">
            @if (Model.NonMembers.Count() == 0)
            {
                <tr><td colspan="2">All Users Are Members</td></tr>
            }
            else
            {
                @foreach (IdentityUser user in Model.NonMembers)
                {
                    <tr>
                        <td>@user.UserName</td>
                        <td>
                            <input type="checkbox" name="IdsToAdd" value="@user.Id">
                        </td>
                    </tr>
                }
            }
        </table>
        <h6 class="bg-info p-1 text-white">Удалить @Model.Role.Name</h6>
        <table class="table table-bordered table-sm">
            @if (Model.Members.Count() == 0)
            {
                <tr><td colspan="2">No Users Are Members</td></tr>
            }
            else
            {
                @foreach (IdentityUser user in Model.Members)
                {
                    <tr>
                        <td>@user.UserName</td>
                        <td>
                            <input type="checkbox" name="IdsToDelete" value="@user.Id">
                        </td>
                    </tr>
                }
            }
        </table>
        <button type="submit" class="btn btn-primary">Сохранить</button>
        <a asp-action="Index" class="btn btn-secondary">Отмена</a>
    </form>
</div>